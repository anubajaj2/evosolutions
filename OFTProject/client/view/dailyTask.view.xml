<mvc:View controllerName="oft.fiori.controller.dailyTasks"
  xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m"
  xmlns:semantic="sap.m.semantic" xmlns:t="sap.ui.table" xmlns:l="sap.m.ListBase"
  xmlns:f="sap.ui.layout.form">
  <semantic:FullscreenPage
    title="Daily Task">
    <semantic:customHeaderContent>
  		<Text id="idUser"> </Text>
  		<Button icon="sap-icon://log" text="Logout" type="Emphasized" tooltip="Logout" press="logOutApp"/>
  	</semantic:customHeaderContent>
    <semantic:content id="idContent">
      <f:SimpleForm editable="true" id="idform">
      	<f:content>
      		<Label text="Date" />
      		<DatePicker id="idCoDate1" displayFormat="dd.MM.yyyy"
            change="onDateChange" value="{'local>/tasks/CrDate'}"> </DatePicker>
          <Label text="Task Type" />
          <Select id="idTaskType" select="onTypeSel">
            <items>
              <core:Item text="Google Business Post" key="GB" />
              <core:Item text="Linkedin Post" key="LP" />
              <core:Item text="Facebook Post" key="FP" />
              <core:Item text="Tweets" key="TW" />
              <core:Item text="SEO Tools MR,GSA" key="ST" />
              <core:Item text="Anu Bot" key="AB" />
              <core:Item text="Competitor Kill" key="CK" />
              <core:Item text="Customer Interaction Calls/Mails" key="CI" />
              <core:Item text="Pinetrust Post" key="PT" />
              <core:Item text="SAP Server Work" key="SW" />
              <core:Item text="Website Development" key="WD" />
              <core:Item text="Website Review posts" key="WR" />
              <core:Item text="Trainings" key="TR" />
              <core:Item text="Team Meeting" key="TM" />
              <core:Item text="Team Event" key="TE" />
              <core:Item text="Self Learning" key="SE" />
              <core:Item text="Others" key="OT" />
            </items>
          </Select>
          <Label text="Task Worked On" />
      		<Input id="idWOn"></Input>
      		<Label text="No. of hours Worked" />
      		<Input width="100px" id="idWH"></Input>
          <Label text="Link of work" />
          <Input id="idLink" value="http://" placeholder="put link of work...."></Input>
      		<Button id="idBtn" text="Save" press="onSave"  enabled="true"></Button>
      	</f:content>
      </f:SimpleForm>
    </semantic:content>
        <semantic:content>
<t:Table rows="{/tasks}"
  id="idCoTable"
  selectionMode="Single"
  rowActionCount="1">
    <t:columns>
      <!-- <t:Column>
        <Label text="Date"/>
        <t:template> <Text text="{CrDate}"/> </t:template>
      </t:Column> -->
      <t:Column width="250px">
        <Label text="{i18n>taskWorkedOn}"/>
        <t:template> <Text text="{taskWorkedOn}"/> </t:template>
      </t:Column>
      <t:Column width="250px">
        <Label text="Task Type" />
        <t:template> <Text text="{path: 'taskType',
          formatter: '.formatter.getTaskText'}" /> </t:template>
      </t:Column>
      <t:Column width="80px">
        <Label text="Hours" />
        <t:template> <Text text="{noOfHours}"/> </t:template>
      </t:Column>
      <t:Column>
        <Label text="Link" />
        <t:template> <Link text="{link}" href="{link}"/> </t:template>
      </t:Column>
      <t:Column>
        <Label text="Delete" />
        <t:template> <Button press="onDelete" icon="sap-icon://delete"/> </t:template>
      </t:Column>
    </t:columns>
    <!-- <t:rowActionTemplate class="g1" id="idRowAction2" visible="false">
     <t:RowAction id="idRowAction" visible= "true" >
      <t:items>
	    	<t:RowActionItem id="idRowAction1" type="Delete" press="onDelete"
                 icon="sap-icon://delete" visible="true" />
	    </t:items>
	   </t:RowAction>
    </t:rowActionTemplate> -->
</t:Table>
</semantic:content>
    <semantic:customFooterContent>
    </semantic:customFooterContent>
</semantic:FullscreenPage>
</mvc:View>
