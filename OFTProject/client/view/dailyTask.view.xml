<mvc:View controllerName="oft.fiori.controller.dailyTasks"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
  xmlns:semantic="sap.m.semantic"
