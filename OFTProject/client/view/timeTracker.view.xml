<mvc:View controllerName="oft.fiori.controller.timeTracker"
  xmlns:l="sap.ui.layout"
	xmlns:semantic="sap.m.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns="sap.m"
  xmlns:t="sap.ui.table"
  xmlns:cal="sap.gantt.shape.cal"
  xmlns:r="sap.gantt.shape.ext.ubc"
	>
  <semantic:FullscreenPage
    title="Track Your Time">
    <semantic:customHeaderContent>
  		<Text id="idUserl"> </Text>
  		<Button icon="sap-icon://log" text="Logout" type="Emphasized" tooltip="Logout" press="logOutApp"/>
  	</semantic:customHeaderContent>
    <semantic:content id="idContent">
    	<VBox>
        <!-- <Label id="idTxt" design="Bold" /> -->

      <f:SimpleForm editable="true" id="idform">
      	<f:content>
          <Label text="Users" />
          <ComboBox id="idUser" items="{/AppUsers}" selectionChange="onSelect" width="52%">
            <items>
              <core:Item key="{TechnicalId}" text="{UserName}"/>
            </items>
            </ComboBox>
              <Label></Label>
      		<!-- <Label text="Date" />
          <DatePicker id="idCoDate1" displayFormat="dd.MM.yyyy"
            change="onDateChange" value="{'local>/tasks/CrDate'}"> </DatePicker> -->
            <Label></Label>
            <Label></Label>
            <Label></Label>
            <l:VerticalLayout>
                  <l:content>
                    <u:Calendar id="idCalendar" startDateChange="onStartDateChange" legend="legend1" nonWorkingDays="1" dependents="{/tasks}">
                      <u:dependents>
                            <Label text="{taskWorkedOn}" ></Label>
                            <Label text="{noOfHours}" ></Label>
                      </u:dependents>
                    </u:Calendar>
                    <u:CalendarLegend id="legend1" />
                    </l:content>

                   <!-- <u:Calendar width="50%"
                    id="calendar1" legend="legend1"/>
                  <u:CalendarLegend id="legend1" />
                  </l:content> -->
                  <ToggleButton text="Apply Changes" press="handleShowSpecialDays"></ToggleButton>
            </l:VerticalLayout>


      	</f:content>
      </f:SimpleForm>


             </VBox>


             </semantic:content>
             </semantic:FullscreenPage>
             </mvc:View>
