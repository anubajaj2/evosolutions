<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
    controllerName="oft.fiori.controller.newLead"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="New Lead"  navButtonPress="onBack">
		<headerContent>
	    	<Text id="idUser"></Text>
			<Button icon="sap-icon://log" text="Logout" type="Emphasized" tooltip="Logout" press="logOutApp"/>
		</headerContent>
		<content>
			<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormToolbar"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false"
			ariaLabelledBy="New Inquiry" >
			<f:toolbar>
				<Toolbar id="TB1">
					<Title id="Title1" text="New Lead" level="H4" titleStyle="H4"/>
					<ToolbarSpacer />
          <Label text="Parent Mode:"/>
          <Switch state="true" change="onParentMode"/>
				</Toolbar>
			</f:toolbar>
			<f:content>
        <Label text="Mobile No" />
				<Input required="true" type="Number" value="{local>/newLead/Phone}" showValueHelp="true"
        valueHelpRequest="onSelectInq"
        liveChange="onInq"
        submit="onEnter"></Input>
    		<Label text="Date" />
				<DatePicker visible="false" id="inqDate" displayFormat="dd.MM.yyyy" dateValue="{local>/newLead/Date}" ></DatePicker>
		        <!-- <Label text="Category" />
		        <Select id="idCategory"
		          selectedKey="{local>/newLead/Category}" width="500px"
		          items="{
		            path: 'local>/courseCategory'
		          }">
		          <core:Item key="{local>text}" text="{local>text}"/>
		        </Select> -->

    			<!-- <Label text="Courses" />
		        <MultiComboBox id="idCourse1"
		          selectedKeys="{local>/newLead/CourseName}" width="500px"
		          items="{
		            path: '/CoursesMst',
		            sorter: { path: 'CourseName' }
		          }">
		          <core:Item key="{id}" text="{CourseName}"/>
		        </MultiComboBox> -->

    			<Label text="Quoted Fee" />
				<Input visible="false" id="quotedFee" type="Number" value="{local>/newLead/Fees}" />

				<Label text="Father Name" />
				<Input value="{local>/newLead/FatherName}"/>
        <Label text="Mother Name"/>
        <Input value="{local>/newLead/MotherName}"/>

				<Label text="Address" />
        		<TextArea value="{local>/newLead/Address}"></TextArea>

        		<Label text="City" />
        		<ComboBox id="idCity" showSecondaryValues="true" items="{local>/cities}" selectedKey="{local>/newLead/City}">
        			<core:ListItem key="{local>city}" text="{local>city}" additionalText ="{local>state}" />
        		</ComboBox>
        <Label text="Email"  />
				<Input required="false" type="number" value="{local>/newLead/EmailId}" />
				<Label text="Emergency Contact Name" />
				<Input value="{local>/newLead/EmergencyContactName}"></Input>
        <Label text="Emergency Contact No" />
				<Input type="Number" value="{local>/newLead/EmergencyContactNo}"></Input>
        <!-- <Label text="Type"/>
        <Select id="idCustType" selectedKey="{local>/newLead/custType}">
          <core:Item key="School" text="School"></core:Item>
          <core:Item key="College" text="College"></core:Item>
          <core:Item key="Graduate" text="Graduate"></core:Item>
          <core:Item key="Post Graduate" text="Post Graduate"></core:Item>
          <core:Item key="Corporate" text="Corporate"></core:Item>
        </Select>
        <Label text="College/Company name" />
        <Input value="{local>/newLead/organization}"/> -->
				<Label text="Remarks" />
				<TextArea value="{local>/newLead/Remarks}">
				</TextArea>

        <Label text="How did you hear about us" />
        <Select id="idHearAbout" selectedKey="{local>/newLead/HearAbout}">
          <core:Item key="JustDial" text="JustDial"></core:Item>
          <core:Item key="PaperAdd" text="PaperAdd"></core:Item>
          <core:Item key="Banner" text="Banner"></core:Item>
          <core:Item key="WhatsApp" text="WhatsApp"></core:Item>
          <core:Item key="Reference" text="Reference"></core:Item>
          <core:Item key="Email" text="Email"></core:Item>
          <core:Item key="LinkedIn" text="LinkedIn"></core:Item>
          <core:Item key="GoogleAds" text="GoogleAds"></core:Item>
          <core:Item key="Other" text="Other"></core:Item>
        </Select>
			</f:content>
		</f:SimpleForm>
	</VBox>
	<VBox>
    <Table id="idWardDetails" editable="true" items="{local>/newLead/WardDetails}" busyIndicatorDelay="0" class="sapUiContentPadding" mode="MultiSelect" growing="true">
      <headerToolbar>
        <OverflowToolbar>
          <ToolbarSpacer/>
          <OverflowToolbarButton id="viewSecureTableAddBtn" icon="sap-icon://add" tooltip="Add" press="onPressAddWard"/>
          <OverflowToolbarButton id="viewSecureTPTableDeleteBtn" icon="sap-icon://delete" tooltip="Delete"
            press="onPressDeleteRow"/>
          </OverflowToolbar>
        </headerToolbar>
        <columns>

          <Column minScreenWidth="Tablet" hAlign="Center" demandPopin="true" width="auto">
            <header>
              <Text text="Ward Name"/>
            </header>
          </Column>
          <Column minScreenWidth="Tablet" hAlign="Center" demandPopin="true" width="auto">
            <header>
              <Text text="Gender"/>
            </header>
          </Column>
          <Column minScreenWidth="Tablet" hAlign="Center" demandPopin="true" width="auto">
            <header>
              <Text text="DOB"/>
            </header>
          </Column>
          <Column minScreenWidth="Tablet" hAlign="Center" demandPopin="true" width="auto">
            <header>
              <Text text="Standard"/>
            </header>
          </Column>
          <Column minScreenWidth="Tablet" hAlign="Center" demandPopin="true" width="auto">
            <header>
              <Text text="School Name"/>
            </header>
          </Column>
          <Column minScreenWidth="Tablet" hAlign="Center" demandPopin="true" width="auto">
            <header>
              <Text text="Weakness"/>
            </header>
          </Column>
          <Column minScreenWidth="Tablet" hAlign="Center" demandPopin="true" width="auto">
            <header>
              <Text text="Mobile No"/>
            </header>
          </Column>
          <Column minScreenWidth="Tablet" hAlign="Center" demandPopin="true" width="auto">
            <header>
              <Text text="Course Name"/>
            </header>
          </Column>
          <Column minScreenWidth="Tablet" hAlign="Center" demandPopin="true" width="auto">
            <header>
              <Text text="Blood Group"/>
            </header>
          </Column>
          <Column minScreenWidth="Tablet" hAlign="Center" demandPopin="true" width="auto">
            <header>
              <Text text="Photo"/>
            </header>
          </Column>
        </columns>
        <items>
          <ColumnListItem vAlign="Middle">
            <cells>
              <Input value="{local>Name}"/>
              <Select selectedKey="{local>Gender}" forceSelection="false">
                <items>
                  <core:Item text="Male" key="M" />
                  <core:Item text="Female" key="F" />
              </items>
              </Select>
              <DatePicker displayFormat="dd.MM.yyyy" dateValue="{local>DOB}"/>
              <Input type="Number" value="{local>Standard}"/>
              <Input value="{local>SchoolName}"/>
              <Input value="{local>Weakness}"/>
              <Input type="Number" value="{local>MobileNo}"/>
              <MultiComboBox id="idCourse1"
  		          selectedKeys="{local>CourseName}" width="500px"
  		          items="{
  		            path: '/CoursesMst',
  		            sorter: { path: 'CourseName' }
  		          }">
  		          <core:Item key="{id}" text="{CourseName}"/>
  		        </MultiComboBox>
              <Select selectedKey="{local>BloodGroup}" forceSelection="false">
                <items>
                  <core:Item text="O+" key="O+" />
                  <core:Item text="O-" key="O-" />
                  <core:Item text="A+" key="A+" />
                  <core:Item text="A-" key="A-" />
                  <core:Item text="B+" key="B+" />
                  <core:Item text="B-" key="B-" />
                  <core:Item text="AB+" key="AB+" />
                  <core:Item text="AB-" key="AB-" />
              </items>
              </Select>
              <Button text="View" press="viewPhoto"/>
            </cells>
          </ColumnListItem>
        </items>
      </Table>
	</VBox>

		</content>
		<footer>
			<Toolbar>
        <Button icon="sap-icon://message-popup" text="{local>/messagesLength}" type="Emphasized"
						press="handleMessagePopoverPress"/>
				<ToolbarSpacer/>
				<Button text="Save" type="Accept" press="onSave" id="idApr"></Button>
        <Button text="Clear" type="Reject" press="onClearForm"></Button>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
