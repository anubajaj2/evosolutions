<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
    controllerName="oft.fiori.controller.newLead"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="New Lead"  navButtonPress="onBack">
		<headerContent>
	    	<Text id="idUser"></Text>
			<Button icon="sap-icon://log" text="Logout" type="Emphasized" tooltip="Logout" press="logOutApp"/>
		</headerContent>
		<content>
			<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="SimpleFormToolbar"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false"
			ariaLabelledBy="New Inquiry" >
			<f:toolbar>
				<Toolbar id="TB1">
					<Title id="Title1" text="New Lead" level="H4" titleStyle="H4"/>
					<ToolbarSpacer />
				</Toolbar>
			</f:toolbar>
			<f:content>
				<Label text="Email Id"  />
				<Input required="true" type="Email" value="{local>/newLead/emailId}" />
				<Label text="Course" />
				<Select  id="course" items="{local>/courses}"
						  selectedKey="{local>/newLead/course}" change="onCourseSelect">
					<items>
						<core:Item text="{local>courseName}" key="{local>courseName}"/>
					</items>
				</Select>
				<Label text="Date" />
				<DatePicker id="inqDate" valueFormat="dd.MM.yyyy"
          displayFormat="dd.MM.yyyy" value="{local>/newLead/date}" ></DatePicker>
				<Label text="Name" />
				<Input value="{local>/newLead/FirstName}"/>
        <Input value="{local>/newLead/LastName}"/>
				<Label text="Address" />
        <TextArea value="{local>/newLead/address}">
        </TextArea>
        <Label text="City" />
<!--				<ComboBox id="country" items="{local>/countries}"
            change="onCourseSelect"
            selectedKey="{local>/newLead/country}">
      			<items>
      				<core:Item text="{local>name}" key="{local>code}"/>
      			</items>
      		</ComboBox> -->
        <Label text="Fees" />
				<Input value="{local>/newLead/fees}" />
        <Label text="Currency" />
				<Input value="{local>/newLead/currency}" />
				<Label text="Phone" />
				<Input type="Number" value="{local>/newLead/phone}">
				</Input>
				<Label text="Alternate EmailId" />
				<Input value="{local>/newLead/emailId2}">
				</Input>
				<Label text="Remarks" />
				<TextArea value="{local>/newLead/remarks}">
				</TextArea>
			</f:content>
		</f:SimpleForm>
	</VBox>
	<VBox>
		<List id="idRecent" growing="true" mode="MultiSelect"
			growingThreshold="100" growingScrollToLoad="false"
			class="sapUiSizeCompact">
      <headerToolbar>
				<Toolbar>
        <Title
            id="titletext2"/>
				<ToolbarSpacer></ToolbarSpacer>
        <CheckBox visible="{= ${local>/Role} === 'Admin'}" tooltip="Dollor Quote" id="doller" />
        <Button icon="sap-icon://action" tooltip="send email" press="onEmail"/>
				<Button visible="{= ${local>/Role} === 'Admin'}" icon="sap-icon://delete" press="onDelete"/>
				<Button	visible="{= ${local>/Role} === 'Admin'}" icon="sap-icon://download" press="onDataExport" />

			</Toolbar>
			</headerToolbar>
		</List>
	</VBox>

		</content>
		<footer>
			<Toolbar>
        <Button icon="sap-icon://message-popup" text="{local>/messagesLength}" type="Emphasized"
						press="handleMessagePopoverPress"/>
				<ToolbarSpacer/>
				<Button text="Save" type="Accept" press="onSave" id="idApr"></Button>
        <Button text="Get Account" press="onGetNext" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
