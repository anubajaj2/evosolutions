</Input> -->

        <Label text="Trainer Name"  />
        <Input required="true"
          value="{trainerModel>/FirstName}"
           id="idFirstName"
           showValueHelp="true"
           valueHelpRequest="onSelect"
           liveChange="onTrainer"
           submit="onEnter"
           placeholder="Enter Trainer Name..."
           showSuggestion="true"
           suggestionItems="{/Trainers}"
           suggestionItemSelected="suggestionItemSelected">
           <suggestionItems>
             <core:Item text="{FirstName}"/>
           </suggestionItems>
         </Input>
        <Label text="LastName" />
        <Input
          id="idLastName"
          type="Text"
          value="{trainerModel>/LastName}" >
        </Input>
        <Label text="JoiningDate" />
<DatePicker id="idJoiningDate"
displayFormat="dd.MM.yyyy"
value="{TrainerModel>/JoiningDate}"
valueFormat="dd.MM.yyyy">
</DatePicker>

          <Label text="Address"/>
          <Input
                        id="idAddress"
                        type="Text"
                        value="{TrainerModel>/Address}">
          </Input>
          <Label text="City"/>
          <Input
                        id="idCity"
                        type="Text"
                        value="{TrainerModel>/City}">
          </Input>
          <Label text="Remarks"/>
          <Input
                        id="idRemarks"
                        type="Text"
                        value="{TrainerModel>/Remarks}">
          </Input>
          <Label text="Contact No"/>
          <Input
                        id="idContactNo"
                        type="Text"
                        value="{TrainerModel>/ContactNo}">
          </Input>

          <Label text="Contact No1"/>
          <Input
                        id="idContactNo1"
                        type="Text"
                        value="{TrainerModel>/ContactNo1}">
          </Input>
          <Label text="AccountNo"/>
          <Input
                        id="idAccountNo"
                        type="Text"
                        value="{TrainerModel>/AccountNo}">
          </Input>

          <Label text="AccountName"/>
          <Input
                        id="idAccountName"
                        type="Text"
                        value="{TrainerModel>/AccountName}">
          </Input>

          <Label text="IFSC Code"/>
          <Input
                        id="idIFSCCode"
                        type="Text"
                        value="{TrainerModel>/IFSCCode}">
          </Input>

          <Label text="Account type"/>
          <Input
                        id="idAccountType"
                        type="Text"
                        value="{TrainerModel>/AccountType}">
          </Input>
          <Label text="PAN Number"/>
          <Input
                        id="idPANNo"
                        type="Text"
                        value="{TrainerModel>/PANNo}">
          </Input>
          <Label text="SoftDelete"/>
          <Input
                        id="idSoftDelete"
                        type="Text"
                        value="{TrainerModel>/SoftDelete}">
          </Input>
          <Label text="CreatedOn"/>
          <DatePicker id="idCreatedOn"
            displayFormat="dd.MM.yyyy"
            value="{TrainerModel>/CreatedOn}"
            valueFormat="dd.MM.yyyy">
          </DatePicker>
          <Label text="CreatedBy"/>
          <Input
                        id="idCreatedBy"
                        type="Text"
                        value="{TrainerModel>/CreatedBy}">
          </Input>
          <Label text="ChangedOn"/>
          <DatePicker id="idChangedOn"
            displayFormat="dd.MM.yyyy"
            value="{TrainerModel>/ChangedOn}"
            valueFormat="dd.MM.yyyy">
          </DatePicker>
          <Label text="ChangedBy"/>
          <Input
                id="idChangedBy"
                type="Text"
                value="{TrainerModel>/ChangedBy}">
          </Input>


</f:content>


</f:SimpleForm>
