<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:i="sap.ui.core"	 xmlns:f = "sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml">
    <Dialog title="Login "
  
    resizable="true" id="captchaDialog">
    <content>
        <f:SimpleForm layout="ResponsiveGridLayout">
            <VBox >
                <Label text="Email" />
                <Input type='Email' liveChange="emailValidation" value="{local>/Email}" editable="{local>/email}"/>
                    <!-- <HBox width="100%" alignContent="Center"> -->
                        <Title width="100%" textAlign="Center" text="OR" visible="{local>/numberVisible}" class="sapUiTinyMargin"  ></Title>
                        <Label visible="{local>/numberVisible}" text="Mobile Number"/>
                        <HBox visible="{local>/numberVisible}" class="sapUiMediumMarginBottom">
                            <Input value="+91" editable="false"   width="3rem"></Input>
                            <Input type='Number' liveChange="numberValidation" value="{local>/mobileNumber}" editable="{local>/MobileNumber}"/>
                                <Button text="Send OTP" press="onNumberOTPPress" visible="{local>/numberVisible}"/>
                </HBox>
                <Label text="Captcha"></Label>
                <HBox>
                    <!-- <Image id="captchaImage" src=""/> -->
                    <VBox id="idLead"></VBox>
                    <!-- <Input editable="false" class="capthchaClass"  value="{local>/generatedCaptcha}"></Input> -->
                    <!-- <Input class="generate" editable="false" id="generatecaptcha" value="{local>/generatedCaptcha}"/> -->
                    <Button press="onRefresh" icon="sap-icon://refresh"/>
                    <!-- <i:Icon src="sap-icon://refresh"></i:Icon> -->
                </HBox>
                <Input id="captchacheck" value="{local>/captcha}" />
                    

                <Label text="OTP" id="otpLabel" visible="{local>/otpVisible}"/>
                <Input liveChange="{local>/otpValue}" id="otpInput" value="{local>/otpValue}" visible="{local>/otpVisible}"/>
                <ObjectStatus title="{local>/ResendMsg}" active="{local>/onResendOTP}" id="countdownT" text="{local>/timerText}" visible="{local>/otpVisible}"/>
                </VBox>
        </f:SimpleForm>
    </content>
    <Button text="Send OTP To Email" id="captchatCheck" press="validateCaptcha" visible="{local>/sendOtp}"></Button>
    <MessageStrip
                visible="{local>/numberVisible}"
				text="If OTP Still not recieved, You can use your phone Number to get OTP"
				showIcon="true"
				showCloseButton="true"
				class="sapUiMediumMarginBottom">
			</MessageStrip>
    <endButton>
        <Button text="Submit" press="onSubmit" enabled="{local>/submitEnable}" visible="{local>/verifySubmit}"/>
    </endButton>
</Dialog>		
</core:FragmentDefinition>